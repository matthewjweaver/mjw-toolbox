# Defaults to make Munin plugins work by default with various packages 
# can be added here (setting uid, etc).

#[postfix_mailqueue]
#user _postfix

# TODO: maybe figure out how to do this without root?
[unbound*]
user root
env.statefile /var/db/munin-pluginstate/unbound-state
env.unbound_conf /var/unbound/etc/unbound.conf
env.unbound_control /usr/sbin/unbound-control
env.spoof_warn 1000
env.spoof_crit 100000
